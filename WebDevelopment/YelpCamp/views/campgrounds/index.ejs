<% layout('layouts/boilerplate') %> 
<body>
    <h1>All Campgrounds: </h1>
    <button class="btn btn-primary my-3"><a href="/campgrounds/new" style="text-decoration: none; color: inherit;">Add new</a></button>
        <% for(let camp of campgrounds){ %> 
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= camp.image %> " alt="" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %> </h5>
                            <p class="card-text"><%= camp.description %> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %></small>
                            </p>
                            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <li><a href="/campgrounds/<%= camp._id%>"><%= camp.title %></a></li> -->
        <% } %> 
