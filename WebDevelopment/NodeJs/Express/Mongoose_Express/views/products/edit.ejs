<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>
<body>
    <H1>Edit item</H1>
    <form action="/products/<%= product._id %>?_method=PUT" method="POST">
        <label for="name">Product Name</label>
        <input type="text" name="name" placeholder="product name" id="name" value="<%= product.name %>">
        <label for="price">Product Price</label>
        <input type="number" name="price" placeholder="product price" id="price" value="<%= product.price %>" step="0.01">
        <label for="category">Select Category</label>
        <select name="category" id="category">
            <% for(let category of categories) { %>
                <option value="<%= category %>" <%= product.category === category ? "selected":""%> ><%= category %></option>
           <% } %> 
        </select>
    <button>Submit</button>
    </form>
    <a href="/products/<%= product._id %>">Cancel</a>
</body>
</html>